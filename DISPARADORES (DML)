CREATE TABLE XXX (
ID_XXX INTEGER,
EDAD INTEGER);


CREATE OR REPLACE TRIGGER XXX_MATOR_EDAD BEFORE INSERT ON XXX FOR EACH ROW     --BEFORE ES PARA VALIDAR      DECLARACIONNN DE PROCEDIMIENTO
BEGIN
IF :NEW.EDAD < 18 THEN      --NEW ES UN NUEVO REGISTRO
RAISE_APPLICATION_ERROR(-20001,'LO SIENTO CHAMACO PRECOS NO SE PUEDE REGISTRAR');
END IF;
END;
/

INSERT INTO XXX VALUES(1,10);
SELECT * FROM XXX;

CREATE TABLE NOMINA_XXX(    --CREA LA TABLA
ID_NOMINA_XXX INTEGER,
LOGIN VARCHAR2(10),
SALDO INTEGER);

INSERT INTO NOMINA_XXX VALUES(1,'Y0',20000);   --INSERTA LOS DATOS

--CREAR UN DISPARADOR QUE PERSONALIZE EL UPDATE DE TAL MANERA QUE SUME EL SALDO ANTERIOR AL NUEVO SALDO ASIGNANDOLE AL UPDATE

CREATE OR REPLACE TRIGGER ACTUALIZAR_SALDO BEFORE UPDATE ON NOMINA_XXX FOR EACH ROW
BEGIN
:NEW.SALDO:=:NEW.SALDO+:OLD.SALDO;    --NUEVO SALDO SERA IGUAL AL ESE MISMO NUEVO SALDO MAS EL SALDO ANTERIOR POR ESO EL OLD Y SIRVE PARA EXTRAER
END;
/
UPDATE XXX SET SALDO=500 WHERE ID_NOMINASXXX=1;
SELECT * FROM NOMINA_XXX;  

--- SI QUIERO QUE RESTE SALDO DEBO CREAR OTRO DISPARADOR CON SOLO CAMBIAR EL SIGNO
